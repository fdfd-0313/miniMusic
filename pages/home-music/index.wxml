<!--pages/home-music/index.wxml-->
<!-- 1. 搜索框 -->
<van-search disabled
            background="#fafafa"
            shape="round"
            placeholder="搜索你喜欢的歌曲"
            bind:click-input="handleSearchClick" />

<!-- 2.轮播图 -->
<swiper class="swiper"
        indicator-dots
        autoplay
        circular
        style="height: {{swiperHeight}}px;">
  <block wx:for="{{banners}}"
         wx:key="bannerId">
    <swiper-item class="swiper-item">
      <image class="swiper-image"
             src="{{item.pic}}"
             mode="widthFix"
             bindload="handleSwiperImageLoaded">
      </image>
    </swiper-item>
  </block>
</swiper>
<!-- 3.推荐歌曲 -->
<view class="recommend-song"
      wx:if="{{recommendSongs.length>0}}">
  <area-herder title="推荐歌曲"></area-herder>
  <view class="song-list">
    <block wx:for="{{recommendSongs}}"
           wx:key="id">
      <song-item-v1 item="{{item}}"></song-item-v1>
    </block>

  </view>
</view>

<!-- 4. 热门歌单/推荐歌单 -->
<song-menu-area title="热门歌单"
                songMemu="{{hotSongMenu}}"
                wx:if="{{hotSongMenu.length>0}}">
</song-menu-area>
<song-menu-area title="推荐歌单"
                songMemu="{{recommendSongMenu}}"
                wx:if="{{recommendSongMenu.length>0}}">
</song-menu-area>

<!-- 5. 巅峰榜 -->
<area-herder title="巅峰榜"
             showRight="{{false}}"></area-herder>
<view class="rangking-list">
  <block wx:for="{{PeaKList}}"
         wx:key="index">
    <ranking-area-item item="{{item}}"
                       rankings="{{rankings}}"></ranking-area-item>
  </block>
</view>