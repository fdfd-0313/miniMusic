/* 相关视频部分 */
.RV {
  margin-top: 32rpx;
  margin-left: 22rpx;
}
.RVitem {
  display: flex;
  padding-top: 16rpx;
}
.left{
  position: relative;
  box-sizing: border-box;
  display: flex;
}
.RVimage {
  width: 320rpx;
  height: 200rpx;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
  z-index: -1;
}
.RVplayCount {
  position: absolute; 
  font-size: 12px;
  color: #fff;
  bottom: 20rpx;
  right: 20rpx;
}
.RVitem .RVplayCount::before {
  content: "";
  position: absolute;
  left: -36rpx;
  top: 6rpx;
  width: 30rpx;
  height: 24rpx;
  background-size: cover;
  background-image: url("https://xingqiu-tuchuang-1256524210.cos.ap-shanghai.myqcloud.com/4624/play_icon.png");
}
.right{
  padding: 16rpx 16rpx;
}
.right .RVArtistname{
  padding-top: 16rpx;
  font-size: small;
  color: rgb(187, 187, 185);
}